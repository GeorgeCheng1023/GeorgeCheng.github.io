<% layout('./layouts/boilerplate')%>
    <h1 class="text-center">Edit Campground</h1>
    <div class="col-6 offset-3">
        <form action="/campgrounds/<%= campground._id%>?_method=PUT" method="post">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="campground[title]" value="<%=campground.title %>">
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="campground[location]" value="<%=campground.location %>">
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="doller">$</span>
                    <input class="form-control" type="text" id="price" placeholder="0" name="campground[price]" value="<%=campground.price %>">
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Image URL</label>
                <input class="form-control" type="text" id="image" name="campground[image]" value="<%=campground.image %>">
            </div>
            <div class="mb-3">
                <button class="btn btn-success">Submit</button>
                <a class="btn btn-warning" href="/campgrounds">Cancel</a></footer>
            </div>
        </form>
    </div>