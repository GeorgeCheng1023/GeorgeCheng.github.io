<% layout('./layouts/boilerplate')%>

    <h1 class="text-center">Add new Campground</h1>
    <div class="col-6 offset-3">
        <form action="/campgrounds" method="post">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="campground[title]">
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="campground[location]">
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="doller">$</span>
                    <input class="form-control" type="text" id="price" placeholder="0" name="campground[price]">
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Image URL</label>
                <input class="form-control" type="text" id="image" name="campground[image]">
            </div>
            <div class="mb-3">
                <button class="btn btn-success">Submit</button>
                <a class="btn btn-warning" href="/campgrounds">Cancel</a></footer>
            </div>
        </form>
    </div>